<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
   <li> <%= link_to task.title, task_path(task[:id]) %>
        <%= link_to "Delete", task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
      <% end %>
</ul>
<p><%= link_to "Create a new task", task_new_path %></p>
